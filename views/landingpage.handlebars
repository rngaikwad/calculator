<html>
<head>
    <{{>includeHead}}
</head>
<body>
  {{>includeMenu}}
  <BR><BR><BR>
  <div class="container">
    <div class="row">
    <div class="col-md-4 col-md-offset-0">
    </div>
      <div class="col-md-4 col-md-offset-0 panel panel-default">
        <h1 align="center" class="margin-base-vertical">Calculate the expression</h1>
        <form class="margin-base-vertical" method="post" action="/toResult">
          <p class="text-center expr" style="margin-top:40px!important;">
          <input type="text" name="expression" style="height: 44px!important;" number required class="form-control" name="exp" placeholder="Enter First Value" />
          </p>

          <p class="text-center expr" style="margin-top:40px!important;">
          <input type="text" name="expression2" style="height: 44px!important;" number required class="form-control" name="exp" placeholder="Enter Second Value" />
          </p>

           <p class="text-center expr" style="margin-top:40px!important;">
           <select class="form-control" name="math" style="height: 44px!important;">
             <option value="add">Addition</option>
             <option value="sub">Subtraction</option>
             <option value="mul">Multiplication</option>
             <option value="div">Division</option>
           </select>
          </p>

          <p class="text-center">
            <button type="submit" class="btn btn-warning ">Calculate</button>
            <a href="/cancel" class="btn btn-warning">Cancel</a>
          </p>
        </form>
      </div>
       <div class="col-md-4 col-md-offset-0">
    </div>
    </div>
  </div>

    {{>includeFoot}}
  </body>
</html> 


